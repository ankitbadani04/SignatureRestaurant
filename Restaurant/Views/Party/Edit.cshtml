<!-- /page header -->
<!-- Content area -->
<div class="content">
    <!-- 2 columns form -->
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Supplier</h5>

            <div class="header-elements">
                <div class="list-icons">
                    <a href="@Url.Action("Index","Party")" class="btn bg-teal-400 btn-labeled btn-labeled-left"><b><i class="icon-list-unordered"></i></b>View List</a>
                </div>
            </div>
        </div>
        <div>
            @if (ViewBag.ErrorMsg != null)
            {

                <div class="alert alert-warning alert-styled-left alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
                    <span class="font-weight-semibold">Warning!</span> @ViewBag.ErrorMsg
                </div>


            }
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Update", "Party", FormMethod.Post, new { @class = "flex-fill", @id = "frmtype", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(M => M.PartyID)
                <div class="row">
                    <div class="col-md-12">
                        <fieldset>
                            <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Edit supplier details</legend>
                            <div class="form-group">
                                <label>Name:</label>
                                @Html.TextBoxFor(M => M.PartyName, new { @type = "text", @class = "form-control", @placeholder = "Enter Item Name", @required = "required" })
                            </div>

                            <div class="form-group">
                                <label>Contact:</label>
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-phone-plus2"></i></span>
                                    </span>
                                    @Html.TextBoxFor(M => M.PartyContact, new { @type = "text", @id = "Contact", @class = "form-control", @placeholder = "Enter contact number", @maxlength = "10" })
                                    @*<span id="errmsg" class="error"></span>*@
                                </div>                          
                            </div>                           
                            <div class="form-group">
                                <label>Email:</label>
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">@@</span>
                                    </span>
                                    @Html.TextBoxFor(M => M.PartyEmail, new { @type = "text", @class = "form-control", @placeholder = "Enter EmailId" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Address:</label>
                                @Html.TextAreaFor(M => M.PartyAddress, new { @type = "text", @class = "form-control", @placeholder = "Enter Address", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>Landmark:</label>
                                @Html.TextBoxFor(M => M.PartyLandmark, new { @type = "text", @class = "form-control", @placeholder = "Enter landmark"})
                            </div>
                            <div class="form-group">
                                <label>Pincode:</label>
                                @Html.TextBoxFor(M => M.PartyPincode, new { @type = "text",@id="pin", @class = "form-control", @placeholder = "Enter landmark", @maxlength = "6", @required = "required" })
                            </div>
                        </fieldset>
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" id="btnsave" class="btn btn-primary">Update<i class="icon-paperplane ml-2"></i></button>
                </div>
            }
        </div>
    </div>
    <!-- /2 columns form -->
</div>
<!-- /content area -->


<script src="~/Content/validation/jquery.validate.min.js"></script>
<script src="~/Content/validation/additional-methods.min.js"></script>
<script>
    $(document).ready(function () {

        $("#frmtype").validate({

            rules:
            {
                PartyName: {
                    required: true,
                    
                },
                PartyContact: {
                    required: true,
                    minlength: 10
                },
                PartyEmail: {
                    required: true,
                    email: true
                },
                PartyAddress: {
                    required: true,
                    rangelength: [2, 85]
                },
                PartyLandmark: {
                    rangelength: [2, 20]
                },
                PartyPincode: {
                    required: true,
                    number: true,
                    maxlength: 6
                }
            },
            messages: {
                PartyName: {
                    required: "Please Enter Name.",
                    lettersonly: "Please Enter a Valid Name. "
                },
                PartyContact: {
                    required: "Please Enter Contact Number.",
                    number: "Please Enter a Valid Contact Number.",
                    minlength: "Your Contact must be at 10 Characters Long.",
                    maxlength: "Please Enter no more than 10 Characters."
                },
                PartyEmail: {
                    required: "Please Enter Email.",
                    email: "Please Enter a Valid Email."
                },
                PartyAddress: {
                    required: "Please Enter Address.",
                    rangelength: "Address between 2 and 80 Characters. "
                },
                PartyLandmark: {
                    rangelength: "Landmark between 2 and 20 characters. "
                },
                PartyPincode: {
                    required: "Please Enter Pincode.",
                    number: "Please Enter a Valid Pincode.",
                    maxlength: "Please Enter no more than 6 Characters."
                }
            }

        });

        $("#Contact,#pin").keypress(function (e) {
     
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                $("#errmsg").html("Input Only 0-9 Number").show().fadeOut("slow");
                return false;
            }
        });

        $("#btnsave").on("click", function () {
            if (!$("#frmtype").valid()) {
                return false;
            }
        });
    });

</script>