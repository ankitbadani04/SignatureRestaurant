<!-- /page header -->
<!-- Content area -->
<div class="content">
    <!-- 2 columns form -->
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">User</h5>

            <div class="header-elements">
                <div class="list-icons">
                    <a href="@Url.Action("Admin","User")" class="btn bg-teal-400 btn-labeled btn-labeled-left"><b><i class="icon-list-unordered"></i></b>View List</a>
                </div>
            </div>
        </div>
        <div>
            @if (ViewBag.ErrorMsg != null)
            {
                if (ViewBag.ErrorMsg == "Exist")
                {
                    <div class="alert alert-warning alert-styled-left alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
                        <span class="font-weight-semibold">Sorry!</span> Username and Contact Already Exists.!
                    </div>
                }
                else
                {
                    <div class="alert alert-warning alert-styled-left alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
                        <span class="font-weight-semibold">Warning!</span> @ViewBag.ErrorMsg
                    </div>
                }
            }
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Update", "User", FormMethod.Post, new { @class = "flex-fill", @id = "frmtype", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(M => M.UserID)
                <div class="row">
                    <div class="col-md-12">
                        <fieldset>
                            <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Edit user details</legend>
                            <div class="form-group">
                                <label>Name:</label>
                                @Html.TextBoxFor(M => M.Name, new { @type = "text", @class = "form-control", @placeholder = "Enter Name", @required = "required" })
                            </div>

                            <div class="form-group">
                                <label>Contact:</label>
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text"><i class="icon-phone-plus2"></i></span>
                                    </span>
                                    @Html.TextBoxFor(M => M.Contact, new { @type = "text",@id="Contact", @class = "form-control", @placeholder = "Enter contact number", @maxlength = "10" })
                                    <span id="errmsg" class="error"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">@@</span>
                                    </span>
                                    @Html.TextBoxFor(M => M.Email, new { @type = "email", @class = "form-control", @placeholder = "Enter EmailId" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Username:</label>
                                @Html.TextBoxFor(M => M.UserName, new { @type = "text", @class = "form-control", @placeholder = "Enter Username", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>Password:</label>
                                @Html.TextBoxFor(M => M.Password, new { @type = "text", @class = "form-control", @placeholder = "Enter password", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>UserType:</label>
                                @Html.DropDownList("UserType", new List<SelectListItem>
                                            {
                                                new SelectListItem{ Text="Admin", Value = "Admin" },
                                                new SelectListItem{ Text="Staff", Value = "Staff" },
                                                new SelectListItem{ Text="Chef", Value = "Chef" },
                                            }, "- Select User Type -", new { @class = "form-control select" })
                            </div>
                            <div class="form-group">
                                <label class="d-block">Block:</label>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        @Html.RadioButtonFor(M => M.IsBlock, "Yes", new { @class = "form-check-input-styled", @name = "radio-inline-left", @checked = "checked" })
                                        Yes
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        @Html.RadioButtonFor(M => M.IsBlock, "No", new { @class = "form-check-input-styled", @name = "radio-inline-left" })
                                        No
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" id="btnsave" class="btn btn-primary">Update<i class="icon-paperplane ml-2"></i></button>
                </div>
            }
        </div>
    </div>
    <!-- /2 columns form -->
</div>
<!-- /content area -->

<script src="~/Content/validation/jquery.validate.min.js"></script>
<script src="~/Content/validation/additional-methods.min.js"></script>
<script>
    $(document).ready(function () {

        $("#frmtype").validate({

            rules:
            {
                Name: {
                    required: true,
                    
                },
                Contact: {
                    required: true,

                    minlength: 10
                },
                Email: {
                    required: true,
                    email: true
                },
                UserName: {
                    required: true,                   
                },
                Password: {
                    required: true,
                    minlength: 5
                },
                UserType: "required",
                IsBlock: "required"
            },
            messages:
            {
                Name: {
                    required: "Please Enter Name.",
                    lettersonly: "Please Enter a Valid Name."
                },
                Contact: {
                    required: "Please Enter Contact Number.",
                    number: "Please Enter a Valid Contact Number.",
                    minlength: "Your Contact must be at 10 Characters Long.",
                    maxlength: "Please Enter no more than 10 Characters."
                },

                Email: {
                    required: "Please Enter Email Address.",
                    email: "Please Enter a Valid Email Address."
                },
                UserName: {
                    required: "Please Enter User Name.",
                    lettersonly: "Please Enter a Valid User Name."
                },
                Password: {
                    required: "Please Enter Password.",
                    minlength: "Your Password must be at least 5 Characters Long."
                },
                UserType: "Please Enter a User Type."

            }
        });

        $("#Contact").keypress(function (e) {
     
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                $("#errmsg").html("Input Only 0-9 Number").show().fadeOut("slow");
                return false;
            }
        });

        $("#btnsave").on("click", function () {
            if (!$("#frmtype").valid()) {
                return false;
            }
        });
    });

</script>
