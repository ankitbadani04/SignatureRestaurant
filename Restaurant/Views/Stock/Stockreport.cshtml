<!-- Content area -->
<div class="content">
    <!-- Hover rows -->
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Stock Report</h5>
            <div class="header-elements">
                <div class="list-icons">

                </div>
            </div>
        </div>



        <table class="table datatable-basic table-hover">
            <thead>
                <tr>
                    <th>Ingredients</th>
                    <th>Total Stock<br /> (In Gram)</th>
                    <th>Total Ing Use <br />(In Gram)</th>
                    <th>Available<br /> (In Gram)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        string avastock= item.avastock.ToString();
                        <tr>
                            <td> @Html.DisplayFor(modelItem => item.ingname)</td>
                            <td> @Html.DisplayFor(modelItem => item.totalstock)</td>
                            <td> @Html.DisplayFor(modelItem => item.usestock)</td>
                            <td>
                                <span class="badge badge-success" style="font-size:12px">
                                    @Html.DisplayFor(modelItem => item.avastock)
                                </span>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- /hover rows -->

</div>
<!-- /content area -->