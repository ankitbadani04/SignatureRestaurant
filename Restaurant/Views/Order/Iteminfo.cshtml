<!-- Content area -->
<div class="content">

    <!-- Hover rows -->
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Item Information</h5>
            <div class="header-elements">
                <div class="list-icons">
                    <a href="@Url.Action("Index","Order")" class="btn bg-teal-400 btn-labeled btn-labeled-left"><b><i class="icon-list-unordered"></i></b>View List</a>
                </div>
            </div>
        </div>

        

        <table class="table datatable-basic table-hover">
            <thead>
                <tr>

                    <th>Order</th>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Status</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Rows != null && Model.Rows.Count > 0)
                {
                    foreach (System.Data.DataRow row in Model.Rows)
                    {
                        <tr>

                            <td>@row["OrderID"]</td>
                            <td>@row["ItemName"]</td>
                            <td>@row["OItemQty"]</td>
                            <td>@row["OItemPrice"]</td>
                            <td>
                                @if (row["OItemStatus"].ToString() == "Complete")
                                {
                                    <span class="badge badge-success">Complete</span>
                                }
                                else if (row["OItemStatus"].ToString() == "Delivered")
                                {
                                    <span class="badge badge-secondary">Delivered</span>
                                }
                                else if (row["OItemStatus"].ToString() == "Pending")
                                {
                                    <span class="badge badge-info">Pending</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Cancel</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>
    <!-- /hover rows -->

</div>
<!-- /content area -->