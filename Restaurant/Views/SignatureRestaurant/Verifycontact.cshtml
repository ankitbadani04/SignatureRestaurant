<body id="tm-container">

    <!-- preloader -->
    <div class="tm-preload">
        <div class="spinner"></div>
    </div>

    <!-- bottom-d -->
    <div id="tm-bottom-d" class="tm-block-bottom-d uk-block uk-block-default tm-inner-shadow tm-overlay-secondary" data-uk-parallax="{bg: '-200'}" style="background-image: url('../Content/Customer/images/background/bg-image-11.jpg');">
        <div class="uk-container uk-container-center" style="margin-bottom: 102px; margin-top: 102px;">
            <section class="tm-bottom-d uk-grid" data-uk-grid-match="{target:'> div > .uk-panel'}" data-uk-grid-margin>

                <div class="uk-width-1-1 uk-width-medium-1-3">
                </div>

                <div class="uk-width-1-1 uk-width-medium-1-3">
                    <div class="uk-panel uk-panel-box uk-panel-box-primary uk-text-center">

                        <!-- reservation form -->
                        <h3 class="uk-module-title-alt">Forgot Password</h3>

                        @using (Html.BeginForm("SendOTP", "SignatureRestaurant", FormMethod.Post, new { @class = "uk-form uk-form-horizontal uk-margin-top", @id = "frmtype", enctype = "multipart/form-data" }))
