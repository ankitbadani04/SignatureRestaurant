<!-- /content area -->
<div class="content">

    <!-- 2 columns form -->
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Table</h5>
            
            <div class="header-elements">
                <div class="list-icons">
                    <a href="@Url.Action("Index","Table")" class="btn bg-teal-400 btn-labeled btn-labeled-left"><b><i class="icon-list-unordered"></i></b>View List</a>
                </div>
            </div>
        </div>
        <div>
            @if (ViewBag.ErrorMsg != null)
            {
                if (ViewBag.ErrorMsg == "Exist")
                {
                    <div class="alert alert-warning alert-styled-left alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
                        <span class="font-weight-semibold">Sorry!</span> Table Already Exists.!
                    </div>
                }
                else
                {
                    <div class="alert alert-warning alert-styled-left alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert"><span>×</span></button>
                        <span class="font-weight-semibold">Warning!</span> @ViewBag.ErrorMsg
                    </div>
                }

            }
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Update", "Table", FormMethod.Post, new { @class = "flex-fill", @id = "frmtype", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(M => M.TableID)
                <div class="row">
                    <div class="col-md-12">
                        <fieldset>
                            <legend class="font-weight-semibold"><i class="icon-reading mr-2"></i> Edit table details</legend>
                            <div class="form-group">
                                <label>Number:</label>
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">0.00</span>
                                    </span>
                                    @Html.TextBoxFor(M => M.TableNumber, new { @type = "text", @class = "form-control", @placeholder = "Enter table number" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Capacity:</label>
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">0.00</span>
                                    </span>
                                    @Html.TextBoxFor(M => M.TableCapacity, new { @type = "text", @class = "form-control", @placeholder = "Enter table capacity" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="d-block">Active:</label>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        @Html.RadioButtonFor(M => M.IsActive, "Yes", new { @class = "form-input-styled", @name = "custom-inline-radio", @id = "custom_radio_inline_unchecked", @checked = "checked" })
                                        Yes
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        @Html.RadioButtonFor(M => M.IsActive, "No", new { @class = "form-input-styled", @name = "custom-inline-radio", @id = "custom_radio_inline_checked" })
                                        No
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" id="btnsave" class="btn btn-primary">Update<i class="icon-paperplane ml-2"></i></button>
                </div>
            }
        </div>
    </div>
    <!-- /2 columns form -->

</div>
<!-- /content area -->



<script src="~/Content/validation/jquery.validate.min.js"></script>
<script src="~/Content/validation/additional-methods.min.js"></script>
<script>
    $(document).ready(function () {

        $("#frmtype").validate({

            rules:
            {
                TableNumber: {
                    required: true,
                    number: true,
                    maxlength : 3
                },
                TableCapacity: {
                    required: true,
                    number: true,
                    maxlength : 3
                },
                IsActive: "required"

            },
            messages: {
                TableNumber: {
                    required: "Please Enter Number.",
                    number: "Please Enter a Valid Number. ",
                    maxlength : "Please Enter Less Then 3 Charactor."
                },
                TableCapacity: {
                    required: "Please Enter Capacity.",
                    number: "Please Enter a Valid Capacity. ",
                    maxlength : "Please Enter Less Then 3 Charactor."
                }
            }

        });


        $("#btnsave").on("click", function () {
            if (!$("#frmtype").valid()) {
                return false;
            }
        });
    });

</script>